{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "paths": {
      "chibivue": ["./packages"]
    },
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["packages/**/*.ts", "examples/**/**.ts"],
  "exclude": ["node_modules", "dist"]
}
